[user]
	name = rtks
	email = rtks@users.noreply.github.com
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	precomposeunicode = true
[merge]
	keepBackup = false;
	tool = opendiff
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[rebase]
	autostash = true
	autosquash = true
[branch]
	autoSetupRebase = always
[pull]
	rebase = preserve
[alias]
	g = log --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
	ga = log --graph --all --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
	amd = git commit -a --amend --no-edit
[include]
	path = ~/.gitconfig.local
