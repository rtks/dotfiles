{
  "title": "MouseGestures",
  "rules": [
    {
      "description": "Button 4 + left,right to desktop switch",
      "manipulators": [
        {
          "type": "basic",
          "parameters": {
            "basic.simultaneous_threshold_milliseconds": 500
          },
          "from": {
            "simultaneous": [
              {
                "pointing_button": "button4"
              },
              {
                "pointing_button": "button1"
              }
            ],
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "simultaneous_options": {
              "key_down_order": "strict"
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": "left_control"
            }
          ]
        },
        {
          "type": "basic",
          "parameters": {
            "basic.simultaneous_threshold_milliseconds": 500
          },
          "from": {
            "simultaneous": [
          {
                "pointing_button": "button4"
              },
              {
                "pointing_button": "button2"
              }
            ],
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "simultaneous_options": {
              "key_down_order": "strict"
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": "left_control"
            }
          ]
        }
      ]
    },
    {
      "description": "Button 4 + middle to button 10",
      "manipulators": [
        {
          "type": "basic",
          "parameters": {
            "basic.simultaneous_threshold_milliseconds": 500
          },
          "from": {
            "simultaneous": [
              {
                "pointing_button": "button4"
              },
              {
                "pointing_button": "button3"
              }
            ],
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "simultaneous_options": {
              "key_down_order": "strict"
            }
          },
          "to": [
            {
              "pointing_button": "button10"
            }
          ]
        }
      ]
    }
  ]
}
