{
  "title": "Microsoft RDP",
  "rules": [
    {
      "description": "Microsoft RDP Swap Ctrl&Cmd",
      "manipulators": [
        {
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.rdc\\.macos"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.rdc\\.macos"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
